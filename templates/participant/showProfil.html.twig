{% extends 'base.html.twig' %}

{% block title %}Profil du participant | {{ parent() }}{% endblock %}

{% block body %}

<div class="container-fluid">
    <div class="row d-flex justify-content-center">
        <div class="col-12 col-sm-4 text-center mt-4 mb-4">
            <h1>{{participant.pseudo}}</h1>

            {% if participant.filename  %}
                <img src= "{{ vich_uploader_asset(participant, 'imageFile') | imagine_filter('thumb') }}" class="img-fluid" alt="Photo de profil" />
            {% else %}
                <img src="{{ '/images/participant/avatar_defaut.jpg'  | imagine_filter('thumb') }}" class="img-fluid"
                    alt="Photo de profil" />
            {% endif %}
            <br>
                    <table class="table table-striped table-bordered">
                        <tbody>
                        <tr>
                            <td>Prénom</td>
                            <td>{{ participant.prenom }}</td>
                        </tr>
                        <tr>
                            <td>Nom</td>
                            <td>{{ participant.nom }}</td>
                        </tr>
                        <tr>
                            <td>Téléphone</td>
                            <td>{{ participant.telephone }}</td>
                        </tr>
                        <tr>
                            <td>Email</td>
                            <td>{{ participant.mail }}</td>
                        </tr>
                        <tr>
                            <td>Campus</td>
                            <td>{{ participant.campus.nom }}</td>
                        </tr>
                        </tbody>
                    </table>
        </div>
    </div>
</div>

 {% endblock %}