{% extends 'base.html.twig' %}

{% block title %}Liste des états de sortie | {{ parent() }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row d-flex justify-content-center">
        <div class="col-10 col-sm-6">
    <h1>Liste des états de sortie</h1>

    <table class="table" id="dataTable">
        <thead>
            <tr>
                <th>Libelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etat in etats %}
            <tr>
                <td>{{ etat.libelle }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('etat_show', {'id': etat.id}) }}">voir</a>
                    <a class="btn btn-primary" href="{{ path('etat_edit', {'id': etat.id}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">pas d'enregistrement en base de donnée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('etat_new') }}">Ajouter</a>
</div>
    </div>
</div>
{% endblock %}
