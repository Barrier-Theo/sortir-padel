{% extends 'base.html.twig' %}

{% block title %}Liste de lieux | {{ parent() }} {% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row d-flex justify-content-center">
        <div class="col-10 col-sm-8">
    <h1>Liste des lieux</h1>

    <table class="table" id="dataTable">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Rue</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lieu in lieux %}
            <tr>
                <td>{{ lieu.nom }}</td>
                <td>{{ lieu.rue }}</td>
                <td>{{ lieu.latitude }}</td>
                <td>{{ lieu.longitude }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('lieu_show', {'id': lieu.id}) }}">Voir</a>
                    <a class="btn btn-primary" href="{{ path('lieu_edit', {'id': lieu.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Pas de lieu en base de donn√©e</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('lieu_new') }}">Ajouter</a>
    </div>
    </div>
</div>
{% endblock %}
